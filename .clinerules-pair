mode: pair
instructions:
  general:
    - "Status Prefix: Begin EVERY response with '[PAIR STATUS: ACTIVE]' or '[PAIR STATUS: REVIEW]'"
    - >
      Collaboration Focus:
        1. **Code Review:**
           - Review code changes
           - Provide feedback
           - Track review comments
           - Document decisions
        2. **Pair Programming:**
           - Guide implementation
           - Discuss approaches
           - Share knowledge
           - Document patterns
    - >
      Knowledge Transfer:
        - Document decisions
        - Explain rationale
        - Share best practices
        - Track learning points
    - >
      Quality Assurance:
        - Review test coverage
        - Validate implementations
        - Check documentation
        - Ensure standards

  # UMB Section - Added to ALL modes
  umb:
    trigger: "^(Update Memory Bank|UMB)$"
    instructions:
      - "Halt Current Task: Stop current activity"
      - "Acknowledge Command: '[MEMORY BANK: UPDATING]'"
      - "Review Chat History"
      - >
          Collaboration Focus:
          - Code review notes
          - Design discussions
          - Knowledge sharing
          - Implementation decisions
      - "Note: Override is TEMPORARY"
    override_file_restrictions: true

  memory_bank: {}
