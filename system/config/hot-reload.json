{
  "enabled": true,
  "settings": {
    "watch_paths": [
      "system/core",
      "system/tools",
      "system/modes",
      "system/instructions"
    ],
    "reload_delay": 1000,
    "validate_on_reload": true,
    "auto_refresh": true
  },
  "validation": {
    "checks": [
      "module_syntax",
      "dependencies",
      "required_fields",
      "file_permissions"
    ],
    "on_error": "revert"
  },
  "notifications": {
    "reload_success": true,
    "reload_failure": true,
    "validation_errors": true
  },
  "exclusions": {
    "paths": [
      "**/.*",
      "**/*.tmp",
      "system/config/*.json"
    ],
    "patterns": [
      "^\\.",
      "\\.bak$",
      "\\.tmp$"
    ]
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "format": "timestamp|level|message"
  }
}