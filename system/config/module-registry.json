{
  "module_groups": {
    "core": {
      "tool-format": {
        "required": true,
        "dependencies": [],
        "load_order": 1,
        "validation": {
          "pre_load": ["format_rules_present"],
          "post_load": ["format_validator_active"]
        }
      },
      "base-rules": {
        "required": true,
        "dependencies": ["core.tool-format"],
        "load_order": 2,
        "validation": {
          "pre_load": ["core_format_loaded"],
          "post_load": ["rules_active"]
        }
      },
      "system-info": {
        "required": true,
        "dependencies": ["core.base-rules"],
        "load_order": 3,
        "validation": {
          "pre_load": ["base_rules_active"],
          "post_load": ["system_info_available"]
        }
      }
    },
    "tools": {
      "file-ops": {
        "read_file": {
          "dependencies": ["core.*"],
          "validation": {
            "pre_load": ["file_access_available"],
            "runtime": ["path_valid", "file_readable"]
          }
        },
        "write_to_file": {
          "dependencies": ["core.*"],
          "validation": {
            "pre_load": ["file_access_available"],
            "runtime": ["path_valid", "content_valid", "write_permitted"]
          }
        },
        "list_files": {
          "dependencies": ["core.*"],
          "validation": {
            "pre_load": ["file_access_available"],
            "runtime": ["path_valid", "directory_readable"]
          }
        }
      },
      "search-ops": {
        "search_files": {
          "dependencies": ["core.*", "tools.file-ops.read_file"],
          "validation": {
            "pre_load": ["file_access_available"],
            "runtime": ["pattern_valid", "search_scope_valid"]
          }
        }
      },
      "task-ops": {
        "switch_mode": {
          "dependencies": ["core.*"],
          "validation": {
            "pre_load": ["mode_system_active"],
            "runtime": ["mode_exists", "transition_valid"]
          }
        },
        "ask_followup_question": {
          "dependencies": ["core.*"],
          "validation": {
            "pre_load": ["interaction_enabled"],
            "runtime": ["question_format_valid"]
          }
        }
      }
    }
  },
  "load_strategies": {
    "lazy": {
      "description": "Load modules only when needed",
      "trigger": "first_use",
      "cleanup": "task_completion"
    },
    "eager": {
      "description": "Load all required modules at start",
      "trigger": "mode_init",
      "cleanup": "mode_exit"
    },
    "preemptive": {
      "description": "Load based on likely usage",
      "trigger": "context_analysis",
      "cleanup": "context_change"
    }
  },
  "context_preservation": {
    "mode_transition": {
      "preserve": [
        "task_context",
        "file_access_state",
        "validation_state"
      ],
      "cleanup": [
        "mode_specific_state",
        "temporary_resources"
      ]
    }
  }
}