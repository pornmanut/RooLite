{
  "system_paths": {
    "core": {
      "base": "system/core/",
      "essential": {
        "path": "system/core/essential/",
        "files": {
          "base_rules": "base-rules.md",
          "system_info": "system-info.md",
          "tool_format": "tool-format.md"
        }
      },
      "mcp": {
        "path": "system/core/mcp/",
        "files": {
          "base": "base.md",
          "server_config": "server-config.md",
          "server_capabilities": "server-capabilities.md"
        }
      },
      "optional": {
        "path": "system/core/optional/",
        "files": {
          "extended_capabilities": "extended-capabilities.md"
        }
      }
    },
    "config": {
      "base": "system/config/",
      "files": {
        "mode_modules": "mode-modules.json",
        "validation_rules": "validation-rules.json",
        "module_registry": "module-registry.json",
        "paths": "paths.json"
      },
      "mcp_servers": {
        "path": "system/config/mcp-servers/",
        "files": {
          "default_config": "default-config.json"
        }
      }
    },
    "instructions": {
      "base": "system/instructions/",
      "shared": {
        "path": "system/instructions/shared/",
        "files": {
          "language_prefs": "language-prefs.md",
          "smart_system_base": "smart-system-base.md"
        }
      },
      "mode_specific": {
        "path": "system/instructions/mode-specific/",
        "files": {
          "architect": "architect-instructions.md",
          "code": "code-instructions.md",
          "debug": "debug-instructions.md",
          "orchestrator": "orchestrator-instructions.md"
        }
      }
    },
    "tools": {
      "base": "system/tools/",
      "file_ops": {
        "path": "system/tools/file-ops/",
        "files": {
          "read_file": "read_file.md",
          "write_to_file": "write_to_file.md",
          "list_files": "list_files.md"
        }
      },
      "search_ops": {
        "path": "system/tools/search-ops/",
        "files": {
          "search_files": "search_files.md",
          "search_and_replace": "search_and_replace.md"
        }
      },
      "task_ops": {
        "path": "system/tools/task-ops/",
        "files": {
          "switch_mode": "switch_mode.md",
          "ask_followup": "ask_followup_question.md"
        }
      }
    }
  },
  "validation": {
    "path_format": {
      "absolute": false,
      "allowed_chars": "[a-zA-Z0-9_\\-/.]",
      "max_length": 255,
      "restricted_patterns": ["~", "$HOME", "..", "/"]
    },
    "file_access": {
      "read_patterns": [".*\\.md$", ".*\\.json$"],
      "write_patterns": [".*\\.md$", ".*\\.json$"],
      "restricted_dirs": ["system/core"]
    }
  }
}